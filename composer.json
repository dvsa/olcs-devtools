{
    "name": "olcs/olcs-devtools",
    "description": "Dev tools",
    "repositories": [
        {
            "packagist": false
        },
        {
            "url": "http://devrepo.shd.ci.nonprod.dvsa.aws",
            "type": "composer"
        },
        {
            "url": "git@repo.shd.ci.nonprod.dvsa.aws:olcs/olcs-coding-standards.git",
            "type": "vcs"
        }
    ],
    "require": {
        "php": ">=5.4",
        "olcs/coding-standards": "^1.2.1",
        "squizlabs/php_codesniffer": "~3.1",
        "phpunit/phpunit": "7.*",
        "phpunit/phpcov": "5.*",
        "phpmd/phpmd": "~2.2",
        "elendev/nexus-composer-push": "^0.0.4"
    },
    "require-dev": {},
    "config": {
        "preferred-install": "dist",
        "secure-http": false
    },
    "autoload": {
        "psr-4": {
            "Devtools\\": "src/"
        }
    },
    "bin": [
        "bin/review",
        "bin/composer-update-syms",
        "bin/release"
    ],
    "extra": {
        "nexus-push": {
            "url": "http://nexus.shd.ci.nonprod.dvsa.aws/repository/OLCS/olcs/olcs-devtools"
        }
    }
}