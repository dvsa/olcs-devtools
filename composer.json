{
    "name": "olcs/olcs-devtools",
    "description": "Dev tools",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/MajorCaiger/phpcov.git"
        },
        {
            "packagist": false
        },
        {
            "url": "http://devrepo.shd.ci.nonprod.dvsa.aws",
            "type": "composer"
        }
    ],
    "require": {
        "php": ">=5.4",
        "squizlabs/php_codesniffer": "~1.5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "sebastian/diff": "dev-master",
        "phpunit/phpcov": "dev-master",
        "phpmd/phpmd": "~2.2.2"
    },
    "config": {
        "preferred-install": "dist",
        "secure-http" : false
    },
    "autoload": {
        "psr-4": {
            "Devtools\\": "src/"
        }
    }
}
