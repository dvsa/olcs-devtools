{
    "name": "olcs/olcs-devtools",
    "description": "Dev tools",
    "repositories": [
        {
            "packagist": false
        },
        {
            "type": "vcs",
            "url": "https://github.com/MajorCaiger/phpcov.git"
        },
        {
            "url": "http://devrepo.shd.ci.nonprod.dvsa.aws",
            "type": "composer"
        },
        {
            "url": "git@repo.shd.ci.nonprod.dvsa.aws:olcs/olcs-coding-standards.git",
            "type": "vcs"
        }
    ],
    "require": {
        "php": ">=5.4",
        "olcs/coding-standards": "^1.0.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "~1.5.3",
        "phpunit/phpunit": "4.*",
        "phpunit/phpcov": "dev-master",
        "phpmd/phpmd": "~2.2.2"
    },
    "config": {
        "preferred-install": "dist",
        "secure-http" : false
    },
    "autoload": {
        "psr-4": {
            "Devtools\\": "src/"
        }
    },
    "bin": ["Review.sh", "composer-update-syms.sh"]
}
